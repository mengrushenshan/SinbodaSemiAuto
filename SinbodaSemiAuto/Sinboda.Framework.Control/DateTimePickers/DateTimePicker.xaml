<UserControl x:Class="Sinboda.Framework.Control.DateTimePickers.DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sinboda.Framework.Control.DateTimePickers"
             xmlns:sin="clr-namespace:Sinboda.Framework.Control.Controls"
             mc:Ignorable="d" 
             >
    <Grid>
        <sin:SinDateTimePicker x:Name="datePicker" ButtonClicked="datePicker_ButtonClicked"/>
        <Popup x:Name="popChioce" PopupAnimation="Fade" PlacementTarget="{Binding ElementName=datePicker}" Placement="Bottom" AllowsTransparency="True" StaysOpen="False" IsOpen="False"/>
    </Grid>
</UserControl>
