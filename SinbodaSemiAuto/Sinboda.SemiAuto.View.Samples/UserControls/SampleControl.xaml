<UserControl x:Class="Sinboda.SemiAuto.View.Samples.UserControls.SampleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sinboda.SemiAuto.View.Samples.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="88" d:DesignWidth="88" MouseLeftButtonDown="UserControl_MouseLeftButtonDown" Cursor="Hand">
    
    <Border x:Name="cover_Border" Width="84" Height="84" BorderThickness="2" BorderBrush="#FFC7C7C7" CornerRadius="76" ClipToBounds="True">
        <Grid>
            <Grid.Clip>
                <EllipseGeometry RadiusX="40" RadiusY="40" Center="40,40">
                </EllipseGeometry>
            </Grid.Clip>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border x:Name="middle_border" >
                <TextBlock x:Name="reagent_TextBlock" Text="{Binding Name}"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
            </Border>
            
        </Grid>
    </Border>
</UserControl>
