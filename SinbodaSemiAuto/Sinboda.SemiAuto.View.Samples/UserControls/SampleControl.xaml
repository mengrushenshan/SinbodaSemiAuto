<UserControl
    x:Class="Sinboda.SemiAuto.View.Samples.UserControls.SampleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sinboda.SemiAuto.View.Samples.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="66"
    d:DesignWidth="66"
    Cursor="Hand"
    MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
    mc:Ignorable="d">

    <Border
        x:Name="cover_Border"
        Width="62"
        Height="62"
        BorderBrush="#FFC7C7C7"
        BorderThickness="2"
        ClipToBounds="True"
        CornerRadius="76">
        <Grid>
            <Grid.Clip>
                <EllipseGeometry
                    Center="29,29"
                    RadiusX="29"
                    RadiusY="29" />
            </Grid.Clip>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border x:Name="middle_border">
                <TextBlock
                    x:Name="reagent_TextBlock"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{Binding ItemName}" />
            </Border>

        </Grid>
    </Border>
</UserControl>
