<UserControl
    x:Class="Sinboda.SemiAuto.View.Samples.UserControls.SampleRowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sinboda.SemiAuto.View.Samples.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="66"
    d:DesignWidth="1000"
    Cursor="Hand"
    MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
    mc:Ignorable="d">

    <Border
        x:Name="cover_Border"
        Width="1000"
        Height="66"
        BorderBrush="#FFFFFFFF"
        BorderThickness="2"
        ClipToBounds="True"
        CornerRadius="30">
        <Grid>
            <Grid.Clip>
                <EllipseGeometry
                    Center="29,29"
                    RadiusX="29"
                    RadiusY="29" />
            </Grid.Clip>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border x:Name="middle_border">
                <TextBlock
                    x:Name="row_TextBlock"
                    HorizontalAlignment="left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Padding="15"
                />
            </Border>

        </Grid>
    </Border>
</UserControl>
