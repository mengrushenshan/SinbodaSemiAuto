                            <MultiTrigger.Conditions>
                                <Condition Property="IsPrefixText" Value="false"/>
                                <Condition Property="IsSuffixText" Value="true"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="bc" Property="CornerRadius" Value="2,0,0,2"/>
